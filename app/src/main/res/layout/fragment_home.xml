<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/truque"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="187dp"
                android:src="@mipmap/logo" />

            <TextView
                android:id="@+id/Parrafo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Fundacion Dios Abre Brecha y Camino nacio hace 29 años como un metodo de ayuda a personas en situacion vulnerable, conocidas de el señor Luis Eduardo Nieto Lavayen, precursor de causas sociales a nivel alimentario, educativo y deporte."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="394dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="64dp"
                android:text="Despues del deceso de el señor Nieto se hace cargo de la fundacion nuestra presidenta Ingrid Nieto se hace cargo de la fundacion nuestra presidenta Ingrid toma la decisión de sacar el registro de la fundacion en el ministerio de Inclusion Economica y Social, siendo el 25 de abril aprobado su registro con la personeria                                                   juridica MIES-DDG1-2018-0033"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="394dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="64dp"
                android:text="MISION"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="394dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="64dp"
                android:text="Somos una organizacionin fine de lucro, cuya misión esta enfocada  en desarrollar programas a rodo nivel socioeconomico y que lucha por el mejoramiento y la restitucion física,psicológica, emocional y espiritual en todos los ciclos de la vida."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="377dp"
                android:layout_height="226dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="64dp"
                android:src="@mipmap/misio" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="398dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="64dp"
                android:text="VISIÓN"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="64dp"
                android:text="La fundación Dios Abre Brecha y camino, está comprometida con fomentar, asesorar y desarrollar oportunidades para el emprendimiento productivo y contribuira la inclusión económica y social, a travez de charlas y actividades de capacitación, para accionar alertas de prevención contra la violación  de los derechos de la población en situación de vulnerabilidad"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="64dp"
                android:text="Creando así condiciones de igualdad y oportunidaes integrales para las familias dentro de nuestro país,dentro de estas oportunidades también tenemos la lucha para la erradicacion de la mal nutricion de nuestros beneficiaríos."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:src="@mipmap/aaaaa" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="398dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="64dp"
                android:text="OBJETIVOS"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="64dp"
                android:text="La Fundación tiene como objetivo general: Proponer y ejecutar programas y servicios direccionados para la inclusión económica y social, con énfasis en los grupos de atención prioritaria(NIÑOS, NINAS, ADULTOS MAYORES, PERSONAS CON DISCAPACIDAD)  y la población que se encuentra en situación de probreza y vulnerabilidad, promoviendo el desarrollo y cuidado durante el ciclo de vida."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="373dp"
                android:layout_height="243dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="64dp"
                android:src="@mipmap/obje" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>