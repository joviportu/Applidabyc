<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            app:srcCompat="@drawable/logodabyc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/calibribold"
            android:text="Inicia Sesión"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="8dp"
            android:text="!Hola¡ Encantado de verte de nuevo"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="Correo Electrónico"
            android:textColor="@color/btn_color" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="25dp"
            android:hint="Ingrese correo electronico"
            android:inputType="textEmailAddress"
            android:textSize="15sp" />

        <TextView
            android:layout_width="96dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="Contraseña"
            android:textColor="@color/btn_color" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:hint="Ingrese Contraseña"
            android:inputType="textPassword"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_go_to_menu"
            android:layout_width="247dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="@color/btn_color"
            android:text="Inicia Sesion"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="25dp"
            android:text="visitanos en nuestros perfiles sociales" />


        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="175dp"
            android:layout_height="34dp"
            android:layout_marginLeft="80dp"
            app:srcCompat="@drawable/twitter" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="203dp"
            android:layout_height="49dp"
            android:layout_marginLeft="65dp"
            app:srcCompat="@drawable/descarga" />

        <TextView
            android:id="@+id/tv_go_to_register"
            android:layout_width="71dp"
            android:layout_height="25dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="65dp"
            android:fontFamily="@font/calibribold"
            android:text="Únete"
            android:textColor="@color/btn_color" />


    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>